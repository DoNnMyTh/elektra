{
  "enabled": true,
  "extends": [
    "config:base"
  ],
  "unicodeEmoji": true,
  "prHourlyLimit": 15,

  "separateMinorPatch": false,
  "separateMajorMinor": true,
  "major": {
    "enabled": false
  },

  "ruby-version":{"enabled": false},
  "ruby":{"enabled": true},
  "bundler":{"enabled": true},
  "docker": { "enabled": false },

  "rangeStrategy": "bump",
  "packageRules": [
    {
      "depTypeList": [
        "peerDependencies"
      ],
      "enabled": true,
      "rangeStrategy": "replace"
    },
    {
      "depTypeList": [
        "devDependencies"
      ],
      "enabled": true,
      "rangeStrategy": "pin"
    }
  ],
  
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"]
  }
}
