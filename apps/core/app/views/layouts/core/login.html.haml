!!!
%html
  %head
    %title Monsoon Converged Cloud Dashboard
    = stylesheet_link_tag    'core/application', media: 'all', 'data-turbolinks-track' => true
    = content_for :javascripts do
      = javascript_include_tag 'core/application', 'data-turbolinks-track' => true
    = csrf_meta_tags

    %meta(name="viewport" content="width=device-width, initial-scale=1")
    %meta(http-equiv="X-UA-Compatible" content="IE=edge")

  %body

    %nav.navbar.navbar-login
      .navbar-header
        = link_to "/", class: "navbar-brand" do
          .logo
          Monsoon Converged Cloud

    = yield


    = yield :templates
    = yield :javascripts
