.row
  .col-md-6
    .toolbar.toolbar-aligntop
      %h4
        Pool
        - if current_user.is_allowed?('loadbalancing:resource_update', {target: { project: @active_project, scoped_domain_name: @scoped_domain_name}})
          = link_to 'Edit', plugin('loadbalancing').edit_pool_path(id: @pool.id), data: {modal: true}, class: 'btn btn-primary btn-sm'
    = render partial: 'loadbalancing/pools/item_detail', locals: {pool: @pool}

  .col-md-6
    .toolbar.toolbar-aligntop
      %h4
        Health Monitor
        - unless @healthmonitor
          - if current_user.is_allowed?('loadbalancing:resource_create', {target: { project: @active_project, scoped_domain_name: @scoped_domain_name}})
            = link_to 'New', plugin('loadbalancing').new_pool_healthmonitor_path(pool_id: @pool.id ), data: {modal: true}, class: 'btn btn-primary btn-sm'
        - else
          - if current_user.is_allowed?('loadbalancing:resource_update', {target: { project: @active_project, scoped_domain_name: @scoped_domain_name}})
            = link_to 'Edit', plugin('loadbalancing').edit_pool_healthmonitor_path(pool_id: @pool.id, id: @healthmonitor.id), data: {modal: true}, class: 'btn btn-primary btn-sm'
          - if current_user.is_allowed?('loadbalancing:resource_delete', {target: { project: @active_project, scoped_domain_name: @scoped_domain_name}})
            = link_to 'Delete', plugin('loadbalancing').pool_healthmonitor_path(pool_id: @pool.id, id: @healthmonitor.id), method: :delete, data: { confirm: 'Are you sure you want to delete this Health Monitor?', ok: "Yes, delete it", confirmed: :loading_status}, class: 'btn btn-danger btn-sm pull-right'
    = render partial: 'loadbalancing/pools/healthmonitors/item', locals: {healthmonitor: @healthmonitor}

.row
  .col-md-12
    = render partial: 'loadbalancing/pools/members/index', locals: {pool: @pool, members: @members, servers: @servers}
