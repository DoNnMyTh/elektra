%tr{id: "loadbalancer_listener_#{listener.id}"}
  %td
    = link_to listener.name, plugin('loadbalancing').listener_path(id: listener.id), data: {modal: true}
  %td= listener.description
  %td= listener.protocol
  %td= listener.protocol_port
  %td
    - if listener.default_pool_id
      -#= link_to 'Default Pool', plugin('loadbalancing').show_details_pool_path( id: listener.default_pool_id )
      %i.fa.fa-check
    - else
      -#= link_to 'New Default Pool', plugin('loadbalancing').new_loadbalancer_pool_path(@loadbalancer.id), data: {modal: true}
      %i.fa.fa-times

  %td.snug
    - if current_user.is_allowed?("loadbalancing:loadbalancer_delete", {})
      .btn-group
        %button.btn.btn-default.btn-sm.dropdown-toggle{ type: "button", data: { toggle: "dropdown"}, aria: { expanded: true} }
          %span.fa.fa-cog

        %ul.dropdown-menu.dropdown-menu-right{ role:"menu"}
          %li= link_to 'Show', plugin('loadbalancing').listener_path(id: listener.id), data: {modal: true}
          %li= link_to 'Edit', plugin('loadbalancing').edit_listener_path(id: listener.id), data: {modal: true}
          - if listener.default_pool_id
            %li.divider
            %li= link_to 'Default Pool', plugin('loadbalancing').show_details_pool_path( id: listener.default_pool_id )
          - if current_user.is_allowed?("loadbalancing:loadbalancer_delete", {})
            %li.divider
            %li= link_to 'Delete',
              plugin('loadbalancing').listener_path(id: listener.id),
              method: :delete,
              data: { confirm: 'Are you sure you want to delete this Listener?',
                ok: "Yes, delete it",
                confirmed: :loading_status}
