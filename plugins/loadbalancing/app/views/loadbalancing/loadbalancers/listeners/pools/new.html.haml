= content_for :title do
  New Pool

- if modal?
  .flashes_area
    = render 'flashes'

= simple_form_for @pool, url: plugin('loadbalancing').listener_pools_path(@listener.id), method: :post, remote: request.xhr?, html: {id: 'pool_form', class: 'form-horizontal', data: {modal: true} }, wrapper: :horizontal_form do |f|

  %div{class: modal? ? 'modal-body' : ''}
    - unless @pool.errors.empty?
      %p.alert.alert-error= @pool.errors.full_messages.to_sentence

    = render partial: 'form', locals: {f: f}

  %div.buttons{class: modal? ? 'modal-footer' : ''}
    - if modal?
      %button.btn.btn-default{ type: 'button', data: { dismiss:'modal' }, aria: { label: 'Cancel' } } Cancel
    - else
      = link_to 'Cancel', plugin('loadbalancing').listener_pools_path(@listener), class: 'btn btn-default'
    %button{ type: 'submit', class: 'btn btn-primary', data: { disable_with: 'Please wait...'} } Create
