.row
  .col-md-12
    .toolbar
      %h4
        Pool Members
        - if current_user.is_allowed?('loadbalancing:loadbalancer_create')
          = link_to 'Add', plugin('loadbalancing').new_pool_member_path(pool_id: @pool.id ), data: {modal: true}, class: 'btn btn-primary btn-sm'
    %table.table#members
      %thead
        %tr
          -#%th Name
          %th IP Address
          %th Protocol Port
          %th Weight
          %th.snug
      %tbody
        - if members.blank?
          %tr{data:{empty:true}}
            %td{colspa: 3} No Members available
        - else
          - members.each do | member |
            = render partial: 'loadbalancing/loadbalancers/pools/members/item', locals: {pool: @pool, member: member}
