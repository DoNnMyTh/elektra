%tr{id: "loadbalancer_pool_#{pool.id}"}
  %td
    - if current_user.is_allowed?("loadbalancing:loadbalancer_get", {})
      = link_to pool.name, plugin('loadbalancing').show_details_pool_path(id: pool.id)
    - else
      = link_to pool.name, plugin('loadbalancing').show_details_pool_path(id: pool.id)
  %td= pool.description
  %td= pool.protocol
  %td= pool.lb_algorithm

  %td.snug
    - if current_user.is_allowed?("loadbalancing:loadbalancer_delete", {})
      .btn-group
        %button.btn.btn-default.btn-sm.dropdown-toggle{ type: "button", data: { toggle: "dropdown"}, aria: { expanded: true} }
          %span.fa.fa-cog

        %ul.dropdown-menu.dropdown-menu-right{ role:"menu"}
          %li= link_to 'Details', plugin('loadbalancing').show_details_pool_path(id: pool.id)
          - if current_user.is_allowed?("loadbalancing:loadbalancer_delete", {})
            %li.divider
            %li= link_to 'Delete',
              plugin('loadbalancing').pool_path(id: pool.id),
              method: :delete,
              data: { confirm: 'Are you sure you want to delete this pool?',
                ok: "Yes, delete it",
                confirmed: :loading_status}
