= render "intro"

- if @scoped_project_id
  - if current_user.is_allowed?("loadbalancing:loadbalancer_create", {loadbalancer: {user_id: current_user.id} })
    .toolbar
      = link_to 'Create new', plugin('loadbalancing').new_loadbalancer_path, data: {modal: true}, class: 'btn btn-primary btn-lg'

  - if current_user.is_allowed?("loadbalancing:loadbalancer_list", {loadbalancer: {user_id: current_user.id} })
    %table.table#loadbalancers
      %thead
        %tr
          %th Name
          %th Description
          %th Operating Status
          %th Provisioning Status
          %th IP Address
          %th Listeners
          %th.snug
      %tbody
        - if @loadbalancers.length==0
          %tr{data:{empty:true}}
            %td{colspa: 3} No Load Balancers available
        - else
          - @loadbalancers.each do | loadbalancer |
            = render partial: 'item', locals: {loadbalancer: loadbalancer}
- else
  = render "application/projects_list"
