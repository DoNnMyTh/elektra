%table.table.resource-details
  %thead
    %tr
      %th Domain
      %th Approved Quota
      %th Granted to projects
      %th Usage
      %th Actions
  %tbody
    - @domain_resources.each do |resource|
      = render partial: 'details_table_row', locals: { resource: resource }

= paginate @domain_resources, theme: 'twitter-bootstrap-3', remote: true

