= content_for(:title, "Configure: #{t("resource_management.#{@resource.service}")} > #{t("resource_management.#{@resource.name}")}")
= simple_form_for @resource, url: admin_update_default_quota_path(@resource.id), method: :put, remote: request.xhr?, html: { data: { modal: true } } do |f|
  .modal-body
    - data_type = @resource.data_type
    = f.input :default_quota, label: 'Default quota for new projects in this domain', placeholder: '0 Bytes', as: :string, input_html: { value: @default_quota}
    %p.help-block
      Note: 
      - if @default_quota.nil?
        default quota not configured yet
      - else
        to remove default quota leave the field empty
  %div.buttons{class: modal? ? 'modal-footer' : ''}
    %button.btn.btn-default{type:"button", data: { dismiss:"modal" }, aria: { label: "Cancel" }} Cancel
    %button.btn.btn-primary{type: "submit", data: { disable_with: 'Please wait...'}} Save
 


