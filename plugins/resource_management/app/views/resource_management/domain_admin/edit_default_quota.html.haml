= content_for(:title, "Edit default quota for resource: #{t("resource_management.#{@resource.service}")} > #{t("resource_management.#{@resource.name}")}")
.modal-body
  .row
    .col-md-6
      = simple_form_for @resource, url: admin_update_default_quota_path(@resource.id), method: :put, remote: request.xhr?, html: { data: { modal: true } } do |f|
        = f.error_notification
        .form-input
          = f.input :default_quota
    
          %div.buttons{class: modal? ? 'modal-footer' : ''}
            %button.btn.btn-default{type:"button", data: { dismiss:"modal" }, aria: { label: "Cancel" }} Cancel
            %button.btn.btn-primary{type: "submit", data: { disable_with: 'Please wait...'}} Save
    .col-md-6
      .bs-callout.bs-callout-primary
        %p 
          Default quota will be used as default on...
        %ol
          %li
            new created projects in dashboard to set the approved quota
          %li 
            sync now to set the approved and current quota



