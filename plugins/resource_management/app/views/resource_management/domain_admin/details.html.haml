= content_for(:title, "Details for quota #{@resource_type}")
.modal-body
  .row
    .col-md-2.quota-label
      .text-muted
        BLABLA 
    .col-md-7
      .quota
        .quota-approved{:style => "right:20%"} 
          %span.text-nowrap
            Approved quota: 80
        .quota-current
          %span.text-nowrap
            100
        .progress
          .progress-bar.progress-bar-empty{:style => "width:80%"}
          .progress-bar.progress-bar-quota.quota-overcommit{:style => "width:20%"}
    .col-md-1.quota-request-more
      = link_to 'Request more',plugin('resource_management').resources_request_path(:level => 'compute', :resource_type => 'cores'), data: {modal: true}, class: 'btn btn-primary btn-sm'

  %h2
    %small Details

  %table.table
    %thead
      %tr
        %th Project
        %th Quota
        %th Usage
        %th Edit
    %tbody

- if modal?
  .modal-footer
    - if modal?
      - case @level
      - when "compute"
        = link_to 'Show all compute quotas', plugin('resource_management').admin_compute_path(), class: 'btn btn-primary btn-sm'
      - when "network"
        = link_to 'Show all network quotas', plugin('resource_management').admin_network_path(), class: 'btn btn-primary btn-sm'
      - when "storage"
        = link_to 'Show all storage quotas', plugin('resource_management').admin_storage_path(), class: 'btn btn-primary btn-sm'

      %button.btn.btn-default{type:"button", data: {dismiss:"modal"}, aria: {label: "Close"}} Close
   


