= content_for(:title, "Details for resource: #{t("resource_management.#{@config.service.name}")} > #{t("resource_management.#{@config.name}")}")
.modal-body.clearfix
  %p.alert.alert-danger{style: "display:none"}
  #usage_bars= render partial: "details_usage_bar"

  %h2
    %small
      Details
      %span.loading-place
  #details_table
    = render partial: "details_table"

- if modal?
  .modal-footer
    - if @config and @show_all_button
      = link_to "Show all #{t("resource_management.#{@config.service.name}")} quotas", plugin('resource_management').admin_area_path(area: @config.service.area), class: 'btn btn-primary btn-sm'
    %button.btn.btn-default{type:"button", data: {dismiss:"modal"}, aria: {label: "Close"}} Close

= content_for :javascripts do
  :javascript
    #{render partial: 'sort_details_table_script.js'}
