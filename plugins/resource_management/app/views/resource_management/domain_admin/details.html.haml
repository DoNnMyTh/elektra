= content_for(:title, "Details for quota #{@resource_type}")
.modal-body
  .row
    .col-md-2.quota-label
      .text-muted
        Quota usage
    .col-md-10
      .quota
        .quota-approved{:style => "right:20%"} 
          %span.text-nowrap
            Approved quota: 80
        .quota-current
          %span.text-nowrap
            100
        .progress
          .progress-bar.progress-bar-danger.progress-bar-quota{:style => "width:80%"} 100
          .progress-bar.progress-bar-quota.quota-overcommit-danger{:style => "width:20%"}

  .row
    .col-md-2.quota-label
      .text-muted
        Resource usage
    .col-md-10
      .quota
        .quota-current
          %span.text-nowrap
            100
        .progress
          .progress-bar.progress-bar-quota{:style => "width:60%"} 60

  %h2
    %small Details

  %table.table
    %thead
      %tr
        %th Project
        %th approved Quota
        %th current Quota
        %th Usage
        %th Edit
    %tbody
      %tr
        %th ***REMOVED***_sandbox
        %th 50
        %th 50
        %th 20
        %th 
          = link_to "Edit", '#', class: 'btn btn-primary btn-xs'
      %tr
        %th bla_sandbox
        %th 30
        %th 
          .text-warning 50
        %th 
          .text-danger 40
        %th 
          = link_to "Edit", '#', class: 'btn btn-primary btn-xs'
  

- if modal?
  .modal-footer
    - if modal?
      - case @level
      - when "compute"
        = link_to 'Show all compute quotas', plugin('resource_management').admin_compute_path(), class: 'btn btn-primary btn-sm'
      - when "network"
        = link_to 'Show all network quotas', plugin('resource_management').admin_network_path(), class: 'btn btn-primary btn-sm'
      - when "storage"
        = link_to 'Show all storage quotas', plugin('resource_management').admin_storage_path(), class: 'btn btn-primary btn-sm'

      %button.btn.btn-default{type:"button", data: {dismiss:"modal"}, aria: {label: "Close"}} Close
   


