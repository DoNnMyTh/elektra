= content_for :title do
  Attach Volume to Server

= simple_form_for @volume_server, url: plugin('block_storage').attach_volume_path(@volume_server.volume.id), method: :post, remote: request.xhr?, html: {data: {modal: true} } do |f|

  %div{class: modal? ? 'modal-body' : ''}
    - unless @volume_server.errors["message"].blank?
      %p.alert.alert-error= @volume_server.errors.full_messages.to_sentence

    .row
      .col-md-6
        %fieldset
          = f.input :server, { label: "Server",
            input_html:         {},
            prompt: "Select a server",
            as:                 :select,
            collection:         @volume_server.servers,
            required:           true}

  %div.buttons{class: modal? ? 'modal-footer' : ''}
    - if modal?
      %button.btn.btn-default{type:"button", data: {dismiss:"modal"}, aria: {label: "Cancel"}} Cancel
    - else
      = link_to "Cancel", volumes_url(), class: 'btn btn-default'
    -#%button{type: "submit", class: 'btn btn-primary', data: { disable_with: 'Please wait...'}} Attach

