.row
  .col-md-9
    = render_navigation(context: :services, expand_all: true, renderer: :fancy_list)

  .col-md-3
    .infobox
      %h4.action-heading
        Project Info
        - if current_user.is_allowed?('identity:project_update')
          = link_to plugin('identity').edit_project_path, class: "header-action", title: "Edit project info", data: {modal: true, toggle: "tooltip", placement: "left"} do
            %i.fa.fa-edit

      %table.table
        %tbody
          %tr
            %th.snug-nowrap
              Name:
            %td
              = @active_project.name
          %tr
            %th.snug-nowrap
              Description:
            %td
              = @active_project.description



    - if @active_project.subprojects_ids.blank?
      - if current_user.is_allowed?('identity:project_request')
        %h4.action-heading
          Sub Projects
          = link_to plugin('identity').projects_request_path, class: "header-action" , title: "Request new Subproject", data: {modal: true, toggle: "tooltip", placement: "left"} do
            %i.fa.fa-plus-square-o

        %p None available.


    - else
      %h4.action-heading
        Sub Projects
        - if current_user.is_allowed?('identity:project_request')
          = link_to plugin('identity').projects_request_path, class: "header-action" , title: "Request new Subproject", data: {modal: true, toggle: "tooltip", placement: "left"} do
            %i.fa.fa-plus-square-o

      %p= subprojects_tree(@active_project.subprojects_ids,@user_domain_projects, class: 'content-list subprojects')
