.infobox
  %h4.action-heading
    Project Info
    = render partial: '/masterdata_cockpit/application/help_icon', locals: { help_text: "If you need to edit name or description go to Capacity & Masterdata -> Masterdata" }
  %table.table
    %tbody
      %tr
        %th.snug-nowrap
          Name:
        %td
          = @active_project.name
      %tr
        %th.snug-nowrap
          Description:
        %td
          = @active_project.description
      - if @project_resource.bursting && !@project_resource.burst_usage.empty?
        .alert.alert-warning
          =icon("bell")
          Burst is in use
          %br
          for #{@project_resource.burst_usage.keys.length} resource/s bursting is in use. You can check the status
          =link_to 'here',plugin('resource_management').resources_path(), style: "color:#91703B; text-decoration:underline;"
      - elsif @project_resource.bursting && @project_resource.bursting_enabled
        .alert.alert-warning
          =icon("bell")
          Disclaimer!
          %br
          For your convenience
          =link_to 'Bursting',plugin('resource_management').resources_settings_path(), data: {modal: true}, style: "color:#91703B; text-decoration:underline;"
          in
          =link_to 'Resource Management',plugin('resource_management').resources_path(), style: "color:#91703B; text-decoration:underline;"
          is enabled.


- if current_user.is_allowed?('identity:project_request')
  %h4.action-heading
    Sub Projects
    -# Todo - This is not working because user is always project scoped and can't do domain based actions
    - if current_user.is_allowed?('identity:project_create',{project: {domain_id: @scoped_domain_id}})
      = link_to plugin('identity').domains_create_project_path(), class: "header-action" , title: "Request new Subproject", data: {modal: true, toggle: "tooltip", placement: "left"} do
        %i.fa.fa-plus-square-o
    - else
      = link_to plugin('identity').projects_request_project_path(), class: "header-action" , title: "Request new Subproject", data: {modal: true, toggle: "tooltip", placement: "left"} do
        %i.fa.fa-plus-square-o
