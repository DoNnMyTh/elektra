%h3 All domains

%table.table
  %thead
    %tr
      %th Id
      %th Name
      %th Description
      %th Actions
  %tbody
    - @domains.each do |domain|
      %tr
        %td= domain.id
        %td= domain.name
        %td= domain.description
        
        %td.snug
          / - if current_user.is_allowed?("identity:domain_role_assignments", {target: { domain: domain } })
          /   .btn-group
          /     %button.btn.btn-default.btn-sm.dropdown-toggle{ type: "button", data: { toggle: "dropdown"}, aria: { expanded: true} }
          /       %span.fa.fa-cog
          /       -# %span.spinner
          /
          /     %ul.dropdown-menu.dropdown-menu-right{ role:"menu"}
          /       / %li= link_to "Edit", "#"
          /       / %li.divider
          /       %li= link_to 'Delete', '#', method: :delete, data: { confirm: 'Are you sure you want to delete the credential?', ok: "Yes, delete it", confirmed: "$(this).closest('tr').addClass('deleting')", modal: true}
  