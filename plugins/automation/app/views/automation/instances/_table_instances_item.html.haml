%tr{id: "instance_#{instance.id}"}
  %td
    = instance.id.nil? ? instance.name : link_to(instance.name, instance_path(id: instance.id, name: instance.name), data: {modal: true})
  %td= instance.ip
  %td{class: "snug #{'automation_status_alarm' if instance.online == false}"}
    = instance.online_to_string
  %td
  %td