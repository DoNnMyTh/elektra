.nodes_table{data: {update_path: plugin('automation').index_update_nodes_path(page: @node_page), update_interval: 10}}
  %table.table
    %thead
      %tr
        %th Name
        %th Platform
        %th IPs
        %th Tags
        %th Online
        %th Job history
        %th.snug
    %tbody
      - if nodes.empty?
        %tr
          %td{colspan: 8} No nodes available
      - else
        -nodes.each do | node |
          = render partial: 'table_nodes_item', locals: {node: node, jobs: jobs[node.id.to_sym].fetch(:elements, {})}
