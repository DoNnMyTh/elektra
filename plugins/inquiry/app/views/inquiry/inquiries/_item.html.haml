%tr{id: "inquiry_#{inquiry.id}"}
  %td
    - if true #current_user.is_allowed?("network:network_get", {})
      = link_to inquiry.kind, inquiry_path(id: inquiry.id), data: {modal: true}
  %td{:width => "500"}= inquiry.description
  %td= inquiry.requester.full_name
  %td= inquiry.created_at.getlocal.strftime("%F %T")
  %td= inquiry.aasm.human_state

  %td.snug
    - if true #current_user.is_allowed?("network:network_delete", {}) or current_user.is_allowed?("network:network_update", {})
      .btn-group
        %button.btn.btn-default.btn-sm.dropdown-toggle{ type: "button", data: { toggle: "dropdown"}, aria: { expanded: true} }
          %span.glyphicon.glyphicon-cog
        -# %span.spinner

        %ul.dropdown-menu.dropdown-menu-right{ role:"menu"}
          - if true #current_user.is_allowed?("network:network_update", {})
            - if inquiry.states_allowed(current_user).length > 1
              %li= link_to 'Change state', plugin('inquiry').edit_inquiry_path(id: inquiry.id), data: {modal: true}
            - allowed_actions = get_allowed_custom_actions(inquiry)
            - if allowed_actions
              %li= link_to "#{allowed_actions['name']}", "#{allowed_actions['action']}"
            %li= link_to 'Show', plugin('inquiry').inquiry_path(id: inquiry.id), data: {modal: true}
            %li.divider
          - if remote_links && true #current_user.is_allowed?("network:network_delete", {})
            %li= link_to 'Delete', plugin('inquiry').inquiry_path(id: inquiry.id), method: :delete, data: { confirm: 'Are you sure you want to delete this network?', ok: "Yes, delete it", confirmed: :loading_status}, remote: true
