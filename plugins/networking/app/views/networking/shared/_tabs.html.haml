%ul.nav.nav-tabs
  -# no need to render 'shared' separately - turns up in the private list and can be determined by owner
  - %w(private external).each do |network_type|
    - if tab == network_type
      %li.active{ role: 'presentation' }
        = link_to network_type.humanize + ' Networks', '#'
    - else
      %li{ role: 'presentation' }
        = link_to network_type.humanize + ' Networks', plugin('networking').send("networks_#{network_type}_index_path")

  - if tab == 'routers'
    %li.active{role: 'presentation'}
      = link_to 'Routers', '#'
  - else
    %li{role: 'presentation'}
      = link_to 'Routers', plugin('networking').routers_path
