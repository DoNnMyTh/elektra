%tr{id: "network_#{network.id}"}
  %td    
    - if current_user.is_allowed?("networking:network_get", {})
      = link_to network.name, plugin('networking').network_path(id: network.id), data: {modal: true}
        
  %td
    - network.subnet_objects.each do |subnet|
      %b= subnet.name
      &nbsp;
      = subnet.cidr
  %td= network.shared
  %td= network.attributes["router:external"]
  %td= network.status
  %td= network.admin_state_up==true ? 'UP' : 'DOWN'
  
  %td.snug
    - if current_user.is_allowed?("networking:network_delete", {}) or current_user.is_allowed?("networking:network_update", {})
      .btn-group
        %button.btn.btn-default.btn-sm.dropdown-toggle{ type: "button", data: { toggle: "dropdown"}, aria: { expanded: true} }
          %span.fa.fa-cog
          -# %span.spinner

        %ul.dropdown-menu.dropdown-menu-right{ role:"menu"}
          - if current_user.is_allowed?("networking:network_update", {})
            %li= link_to 'Edit', plugin('networking').edit_network_path(id: network.id), data: {modal: true}

            %li.divider
          - if current_user.is_allowed?("networking:network_delete", {})
            %li= link_to 'Delete', plugin('networking').network_path(id: network.id), method: :delete, data: { confirm: 'Are you sure you want to delete this network?', ok: "Yes, delete it", confirmed: :loading_status}, remote: true
