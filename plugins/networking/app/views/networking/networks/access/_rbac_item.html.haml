%tr{id: "rbac_#{rbac.id}"}
  %td= rbac.action
  %td= rbac_target(rbac.target_tenant)

  %td.snug
    - if current_user.is_allowed?("networking:network_#{@network_type}_update", {})
      .btn-group
        %button.btn.btn-default.btn-sm.dropdown-toggle{ type: "button", data: { toggle: "dropdown"}, aria: { expanded: true} }
          %span.fa.fa-cog

        %ul.dropdown-menu.dropdown-menu-right{ role:'menu'}
          %li= link_to 'Delete',
            plugin('networking').send("networks_#{@network_type}_access_path", @network_id, rbac.id),
            method: :delete,
            data: { confirm: 'Are you sure you want to delete this access?', ok: "Yes, delete it", confirmed: :loading_status },
            remote: true
