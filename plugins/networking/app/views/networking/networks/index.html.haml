= render "intro"

- if @scoped_project_id
  - if current_user.is_allowed?("networking:network_create", {network: {user_id: current_user.id} })
    .toolbar
      = link_to 'Create new', plugin('networking').new_network_path, data: {modal: true}, class: 'btn btn-primary btn-lg'

  %table.table
    %thead
      %tr
        %th Name
        %th Subnets Associated
        %th Shared
        %th External
        %th Status
        %th Admin State
        %th.snug
    %tbody
      - if @networks.length==0
        %tr
          %td{colspa: 6} No network available
      - else
        - @networks.each do | network |
          = render partial: 'item', locals: {network: network}
- else
  = render "application/projects_list"
