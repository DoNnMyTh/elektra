= content_for :main_toolbar do
  Monitoring
= render partial: 'tabs', locals: { tab: 'overview' }

.overview
  .row
    .col-md-4
      %svg#State
    .col-md-8
      .row
        .col-md-4
          %svg#Alarm
        .col-md-4
          %svg#Unknown
        .col-md-4
          %svg#OK

:javascript
  monitoring.render_overview_pie('State',#{@state_pie_data.to_json},#{@alarm_cnt},350);
  monitoring.render_overview_pie('Alarm',#{@state_alarm_pie_data.to_json},#{@state_alarm_cnt},220);
  monitoring.render_overview_pie('OK',#{@state_ok_pie_data.to_json},#{@state_ok_cnt},220);
  monitoring.render_overview_pie('Unknown',#{@state_unknown_pie_data.to_json},#{@state_unknown_cnt},220);