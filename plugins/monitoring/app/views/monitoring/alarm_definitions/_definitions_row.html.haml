%tr
  %td= alarm_definition.name
  %td= alarm_definition.severity
  %td= alarm_definition.description
  %td
    - if alarm_definition.notification_action?
      = icon('check-square')
    - else
      %strong -
  %th.snug
    .btn-group
      %button.btn.btn-default.btn-sm.dropdown-toggle{ type: 'button', data: { toggle: 'dropdown' }, aria: { expanded: true } }
        %span.fa.fa-cog

      %ul.dropdown-menu.dropdown-menu-right{ role: 'menu' } 
        %li= link_to 'Show', plugin('monitoring').alarm_definition_path(alarm_definition.name), data: { modal: true }
        %li= link_to 'Edit', plugin('monitoring').edit_alarm_definition_path(alarm_definition.name), data: { modal: true }
        %li= link_to 'Delete', plugin('monitoring').alarm_definition_path(alarm_definition.name), method: :delete, data: { confirm: "Are you sure?" }

