= content_for :title do
  New Alarm Definition

= simple_modal_form_for @alarm_definition, submit_action: 'Create', url: plugin('monitoring').alarm_definitions_path, method: :post, cancel_url: plugin('monitoring').alarm_definitions_path, html: { class: 'form-horizontal' }, wrapper: :horizontal_form do |f|
  #backend_error
  = f.input :name, placeholder: 'Enter name'
  = f.input :description, placeholder: 'Enter Description'
  = f.input :expression, placeholder: 'Enter Expression'
  = f.input :severity, collection: ['Low','Medium','High','Critical'], selected:'Low'
  = f.input :match_by
    
=content_for :javascripts do
  :javascript
    setTimeout(function(){
      $('#alarm_definition_name').focus().select();
    }, 0)



