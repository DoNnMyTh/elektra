%table.table
  %thead
    %tr
      %th Status
      %th Severity
      %th Name
      %th Description
      %th Last Status Change
      %th.snug
  %tbody
    - if @alarms.empty?
      %tr
        %td{colspan: 4} 
          No alarms found. Everything seems to be fine
          %span= icon('smile-o')
    - else
      - @alarms.each do |alarm|
        = render partial: 'list_row', locals: { alarm: alarm }

= paginate @alarms, :theme => 'twitter-bootstrap-3', :remote => true
