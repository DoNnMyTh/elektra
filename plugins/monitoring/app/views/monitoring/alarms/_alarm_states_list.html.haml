%table.table
  %thead
    %tr
      %th Date
      %th New State
      %th Old State
      %th Reason
  %tbody
    - if @alarm_states.empty?
      %tr
        %td{colspan: 4} No alarm state changes fount.
    - else
      - @alarm_states.each do |alarm_state|
        %tr
          %td= alarm_state.timestamp
          %td= show_state(alarm_state.new_state)
          %td= show_state(alarm_state.old_state)
          %td= alarm_state.reason

= paginate @alarm_states, :theme => 'twitter-bootstrap-3', :remote => true          
          
          
          
          
          
          
          
          
          
          
          
          
          
          
          
          
          
          
          
          
          
          
          
          
          
          
