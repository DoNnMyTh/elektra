%tr
  %td= alarm.status
  %td= alarm.severity
  %td= alarm.definition
  %th.snug
    .btn-group
      %button.btn.btn-default.btn-sm.dropdown-toggle{ type: 'button', data: { toggle: 'dropdown' }, aria: { expanded: true } }
        %span.fa.fa-cog

      %ul.dropdown-menu.dropdown-menu-right{ role: 'menu' } 
        %li= link_to 'Show', '#', data: { modal: true }
        %li= link_to 'Definition', '#', data: { modal: true }
        %li= link_to 'History', '#', data: { modal: true }
        %li= link_to 'Delete', '#', method: :delete, data: { confirm: "Are you sure?" }

