%tr
  %td= show_state(alarm.state)
  %td= show_severity(alarm.severity)
  %td= @alarm_definitions[alarm.alarm_definition_id].name
  %td= @alarm_definitions[alarm.alarm_definition_id].description
  %td= alarm.state_updated_timestamp
  %th.snug
    .btn-group
      %button.btn.btn-default.btn-sm.dropdown-toggle{ type: 'button', data: { toggle: 'dropdown' }, aria: { expanded: true } }
        %span.fa.fa-cog

      %ul.dropdown-menu.dropdown-menu-right{ role: 'menu' } 
        %li= link_to 'Show', plugin('monitoring').alarm_path(alarm.id, name: @alarm_definitions[alarm.alarm_definition_id].name) , data: { modal: true }
        %li= link_to 'Definition', plugin('monitoring').alarm_definition_path(alarm.alarm_definition_id) , data: { modal: true }
        -# TODO
        -#%li= link_to 'History', '#', data: { modal: true }
        -# https://github.com/openstack/monasca-api/blob/master/docs/monasca-api-spec.md#list-alarms-state-history
        -#%li= link_to 'Update', '#', data: { modal: true }
        -# https://github.com/openstack/monasca-api/blob/master/docs/monasca-api-spec.md#update-alarm
        %li= link_to 'Delete', plugin('monitoring').alarm_path(alarm.id), method: :delete, data: { confirm: "Are you sure?" }

