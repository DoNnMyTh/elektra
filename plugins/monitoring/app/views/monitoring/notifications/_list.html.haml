%table.table
  %thead
    %tr
      %th Name
      %th Type
      %th Address
      %th.snug
  %tbody
    - if @notifications.empty?
      %tr
        %td{colspan: 4} No notification definitions found.
    - else
      -# TODO: add pagination
      - @notifications.sort_by(&:name).each do |notification|
        = render partial: 'list_row', locals: { notification: notification } 

