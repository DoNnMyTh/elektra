%tr
  %td= notification.name
  %td 
    - if notification.type == "EMAIL"
      %span{title: "email notification", style: "cursor:help"}
        = icon('envelope-o')
    - else
      %strong ?
  %td= notification.address
  %th.snug
    .btn-group
      %button.btn.btn-default.btn-sm.dropdown-toggle{ type: 'button', data: { toggle: 'dropdown' }, aria: { expanded: true } }
        %span.fa.fa-cog

      %ul.dropdown-menu.dropdown-menu-right{ role: 'menu' } 
        %li= link_to 'Edit', plugin('monitoring').edit_notification_path(notification.id), data: { modal: true }
        %li= link_to 'Delete', plugin('monitoring').notification_path(notification.id), method: :delete, data: { confirm: "Are you sure?" }

