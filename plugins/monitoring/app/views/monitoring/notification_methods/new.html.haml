= content_for :title do
  New Notification Method

= simple_modal_form_for @notification_method, submit_action: 'Create', url: plugin('monitoring').notification_methods_path, method: :post, cancel_url: plugin('monitoring').notification_methods_path, html: { class: 'form-horizontal' }, wrapper: :horizontal_form, autofocus: 'notification_method_name' do |f|
  #backend_error
  = f.input :name, placeholder: 'Enter name', :input_html => {:"data-focus" => 'autofocus'}
  = f.input :type, collection: ['Email'], selected:'Email'
  = f.input :address , placeholder: 'Enter single email address'


