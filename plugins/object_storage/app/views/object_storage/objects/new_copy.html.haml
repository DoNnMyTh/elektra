= content_for :title do
  Copy object: #{@object.path}

- pl = plugin('object_storage')

= simple_modal_form_for @form, 'Copy', url: pl.create_copy_path(@container_name, @object.path), method: :post, cancel_url: pl.list_objects_path(@container_name, @object.dirname) do |f|
  %fieldset
    .row
      .col-md-3= f.input :container_name, as: :select,  label: 'Target container', collection: @all_container_names, include_blank: false
      .col-md-9
        = f.input :path,           as: :string,  label: 'Target path'
        = f.input :with_metadata,  as: :boolean, label: 'Copy metadata'
