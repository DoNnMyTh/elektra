%h5 Read ACLs

%div{ class: "#{@acl_parse_error ? 'panel panel-danger' : 'panel panel-success'  }" }
  %div{class: "panel-body"}
    -if @read_acls.keys.length > 0
      - @read_acls.each do |acl_name, acl_translation|
        .row
          .col-md-6.text-truncate
            = render partial: 'acl_translation', locals: { acl_translation: acl_translation } 
          .col-md-6{style: "word-wrap: break-word;"}
            =acl_name
        %hr{style:"margin-top:5px; margin-bottom:5px;"}
    - else
      No Read ACLs found

