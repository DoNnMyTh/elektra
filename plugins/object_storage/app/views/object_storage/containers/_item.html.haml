%tr
  %td
    %span.glyphicon.glyphicon-hdd{ title: 'Container' }
    =link_to container.name, plugin('object_storage').list_objects_path(container.name)
  %td= "#{container.bytes_used} bytes" # TODO: format
  %td= container.object_count
  %td.snug
    .btn-group
      %button.btn.btn-default.btn-sm.dropdown-toggle{ type: 'button', data: { toggle: 'dropdown' }, aria: { expanded: true } }
        %span.glyphicon.glyphicon-cog

      %ul.dropdown-menu.dropdown-menu-right{ role: 'menu' }
        %li= link_to 'Properties', plugin('object_storage').container_path(container.name), data: { modal: true }
