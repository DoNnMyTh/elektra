= simple_form_for @form, url: '#', method: :post, remote: request.xhr?, html: { data: { modal: true } } do |f|
  %div{class: modal? ? 'modal-body' : ''}
    .row.quota-row
      .col-md-6
        %fieldset
          = f.input :name, label: 'Type the name of the container to confirm the deletion!'
      .col-md-6
        .bs-callout.bs-callout-warning
          %p 
            Deleting this container and its objects cannot be undone. Are you sure you want to delete container
            %strong #{@container.name}
            ?
    .buttons{class: modal? ? 'modal-footer' : ''}
      - if modal?
        %button.btn.btn-default{type:"button", data: { dismiss:"modal" }, aria: { label: "Cancel" }} Cancel
      - else
        = link_to "Cancel", data: {dismiss:"modal"}, class: 'btn btn-default'
      %button.btn.btn-danger{type: "submit", data: { disable_with: 'Please wait...'}} Delete

