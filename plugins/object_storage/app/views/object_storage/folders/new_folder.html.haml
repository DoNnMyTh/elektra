= content_for :title do
  - if @object.clean_path.empty?
    Create folder
  - else
    Create folder below: #{@object.clean_path}

= simple_form_for @form, url: plugin('object_storage').create_folder_path(@container_name, @object.path), method: :post, remote: request.xhr?, html: { data: { modal: true } } do |f|
  %div{class: modal? ? 'modal-body' : ''}

    %fieldset
      = f.input :name, as: :string, label: 'Folder name'

    %div.buttons{class: modal? ? 'modal-footer' : ''}
      - if modal?
        %button.btn.btn-default{type:"button", data: { dismiss:"modal" }, aria: { label: "Cancel" }} Cancel
      - else
        = link_to "Cancel", plugin('object_storage').list_objects_path(@container_name, @object.path), class: 'btn btn-default'
      %button.btn.btn-primary{type: "submit", data: { disable_with: 'Please wait...'}} Create
