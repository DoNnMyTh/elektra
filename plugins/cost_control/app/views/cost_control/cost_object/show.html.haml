=content_for :main_toolbar do
  Cost Control

- writable = current_user.is_allowed?('cost_control:cost_object_update')

=simple_form_for @metadata, url: plugin('cost_control').cost_object_path, method: :put, html: { class: 'form-horizontal' } do |f|
  .row
    - types = CostControl::ProjectMetadata::COST_OBJECT_TYPES
    .col-md-3= f.input :cost_object_type, collection: types.keys, label_method: -> (k) { types[k] }, input_html: { readonly: !writable }
  .row
    .col-md-3= f.input :cost_object_id, input_html: { readonly: !writable }

  - if writable
    .buttons
      = button_tag 'Save', { class: 'btn btn-primary', data: { disable_with: "Please wait..." } }
