%tr
  %td
    = link_to(secret.display_name, plugin('key_manager').secret_path(id: secret.uuid), data: {modal: true})
  %td
    = secret.secret_type
  %td
    .btn-group
      %button.btn.btn-default.btn-sm.dropdown-toggle{ type: "button", data: { toggle: "dropdown"}, aria: { expanded: true} }
        %span.fa.fa-cog

      %ul.dropdown-menu.dropdown-menu-right{ role:"menu"}
        %li= link_to 'Metadata',"#", data: {modal: true}
        %li= link_to 'Remove', "#", method: :delete, data: { confirm: "Are you sure you want to remove the secret?", ok: "Yes, remove it", confirmed: :loading_status}, remote: true