  window.location = "<%= plugin('compute').instance_path(id: @instance.id) %>"
<% else %>
  $("#instance_<%=@instance.id%>").replaceWith("<%= j(render(partial: 'compute/instances/item', locals: {instance: @instance })) %>");
  $('#instance_<%=@instance.id%> [data-collapsable]').collapsable({collapsed: false});
<% end %>
