.masterdata-group
  %h5.masterdata-heading
    Cost Info
    %a.help-link{data:{content: t('masterdata_cockpit.co_info'), popover: {type: "help-hint"}, toggle: "popover"}}
      = icon('question-circle')

  - if @inheritance && @inheritance.co_inheritable
    .row
      .col-sm-4.details-label
        - if @active_project.parent_id == @active_project.domain_id
          Inherited from domain
        - else
          Inherited from parent project
      .col-sm-8.details-value
        - if @project_masterdata.cost_object_inherited
          = icon('check-square-o')
        -else
          = icon('times')
  .row
    .col-sm-4.details-label
      Type
    .col-sm-8.details-value
      - if @project_masterdata.cost_object_type
        = MasterdataCockpit::Config.cost_object_types[@project_masterdata.cost_object['type']]
      - else
        \-
  .row
    .col-sm-4.details-label
      Name/Number
    .col-sm-8.details-value
      - if @project_masterdata.cost_object_name
        = @project_masterdata.cost_object_name
      - else
        \-

.masterdata-group
  %h5.masterdata-heading 
    Contact
    %a.help-link{data:{content: t('masterdata_cockpit.contact_info'), popover: {type: "help-hint"}, toggle: "popover"}}
      = icon('question-circle')
  .row
    .col-sm-4.details-label
      Primary Contact
    .col-sm-2.details-value
      - unless @project_masterdata.responsible_primary_contact_id
        \Not defined
      = @project_masterdata.responsible_primary_contact_id
    - if @project_masterdata.responsible_primary_contact_email
      .col-sm-1.details-label
        Contact
      .col-sm-4.details-value
        = icon('envelope-o')
        = mail_to @project_masterdata.responsible_primary_contact_email
  .row
    .col-sm-4.details-label
      Hotline/TicketQueue/Other
    .col-sm-8.details-value
      - unless @project_masterdata.additional_information
        \Not defined
      = @project_masterdata.additional_information

