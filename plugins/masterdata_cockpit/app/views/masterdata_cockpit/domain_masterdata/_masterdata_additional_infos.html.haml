
- if @domain_masterdata
  .infobox
    %h4.action-heading
      Masterdata Info
      .masterdata-action
        - if current_user.is_allowed?('masterdata_cockpit:masterdata_edit')
          = link_to 'Edit Masterdata', plugin('masterdata_cockpit').domain_masterdata_edit_path(), title: "", data: {modal: true, toggle: "tooltip", placement: "left"}, class: 'btn btn-primary btn-xs pull-right'
    %table.table
      %tbody
        %tr
          %th.snug-nowrap
            Domain:
          %td
            = @scoped_domain_name
        %tr
          %th
            Description:
          %td
            - unless @domain_masterdata.description
              \-
            = @domain_masterdata.description
        %tr
          %th.snug-nowrap
            Last change:
          %td
            - if @domain_masterdata.changed_at
              - last_change = DateTime.parse(@domain_masterdata.changed_at)
              = last_change.strftime('%I:%M:%S %p %d.%B %Y')
            - else
              \-
  = render partial: "what_is_masterdata"