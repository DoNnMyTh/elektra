.context-breadcrumb.context-breadcrumb-fancy
  .container.context-container
    - if @scoped_domain_id
      %ol.context-list
        %li.dropdown
          = link_to plugin('identity').domain_path(project_id:nil) do
            %i.icon-link.fa.fa-home

      %ol.context-list
        %li.dropdown
          = link_to plugin('identity').projects_path, data: {modal: true} do
            %i.icon-link.fa.fa-th-list


    - if @scoped_project_id
      %ol.context-list
        %li
          = link_to @scoped_project_name, plugin('identity').project_path(project_id: @scoped_project_id)

      %ol.context-list
        %li.dropdown.dropdown-mega
          %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
            %i.fa.fa-cloud
            = selected_service_name
            %span.caret
          = render_navigation(context: :services, expand_all: true, renderer: :fancy_list)


    .special-crumb
      - if services.available?(:webconsole) and plugin_name!='webconsole' and plugin_name!='loadbalancing'
        = link_to 'javascript:void(0)', class: 'solo-icon-link', data: {trigger: 'webconsole:open'} do
          %span.fa-stack
            %i.fa.fa-square.fa-stack-2x
            %i.fa.fa-terminal.fa-stack-1x.fa-inverse

      - if current_user and current_user.admin?
        %ol.context-list
          %li.dropdown.context-admin
            %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
              %i.fa.fa-sliders
              Admin
              %span.caret
            = render_navigation(context: :"admin", expand_all: true)
