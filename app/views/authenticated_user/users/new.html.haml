.content
  .container
    %h1
      Welcome
      = current_user.description

    .row
      .col-sm-8
        %p Please accept the terms of use for this domain before you continue. Once you have accepted our terms of use your user will be added to the domain and a sandbox project will be created for you.
        %p Thank you and enjoy your stay!

    %section
      = form_tag users_path(@domain_id), method: :post do
        .row
          .col-sm-4
            .form-group
              %label User
              %input.form-control{type: "text", placeholder: "#{current_user.full_name} (#{current_user.name})", readonly: "readonly"}

          .col-sm-4
            .form-group
              %label Domain
              %input.form-control{type: "text", placeholder: @domain_id, readonly: "readonly"}

        .row
          .col-sm-8
            -# .form-group
            -#   %label Domain
            -#   %input.form-control{type: "text", placeholder: @domain_id, readonly: "readonly"}

            .form-group
              %label Terms and Conditions
              .scrollable-text
                :markdown
                  #{Settings.terms}

            = check_box_tag(:terms_of_use)
            = raw("I have read and agree to the #{link_to('terms of use', '/docs/service/terms/', target:'_blank')}")
            -#= f.input :terms_of_use, as: :boolean, checked_value: true, unchecked_value: false, inline_label: raw("I have read and agree to the #{link_to('terms of use', '/docs/service/terms/', target:'_blank')}"), required: true, error: false

        .row
          .col-sm-8
            %p
            %p
              = submit_tag "Send", class: "btn btn-outline"    
              = link_to "Cancel", root_path, class: "btn btn-outline"    