.page-header
  %h1
    Credentials
    %small Manage your ssh keys and ec2 credentials

- if current_user.is_allowed?("identity:credential_create",{credential: {user_id: current_user.id}})
  .toolbar
    = link_to 'Create new', new_credential_path, data: {modal: true}, class: 'btn btn-primary btn-lg'

%table.table
  %thead
    %tr
      %th Type
      %th Scope
      %th Data
      %th
  %tbody#credentials_table
    - if @user_credentials.blank?
      %tr
        %td(colspan="4")
          No credentials available
    - else
      - @user_credentials.each do |credential|
        = render partial: 'item', locals: {credential: credential}
