<div class="hero-unit">
  <h1><%= details[:title] %></h1>
  <p><%= details[:subtitle] %></p>
</div>

<p>
  <%= details[:description] %>
</p>

<% if @sentry_event_id && @sentry_public_dsn %>
  <script src="https://cdn.ravenjs.com/3.1.0/raven.min.js"></script>
  <script>
  Raven.config('<%= @sentry_public_dsn -%>').install()
  Raven.setUserContext(<%= @sentry_user ? @sentry_user.to_json.html_safe : "" -%>);
  Raven.showReportDialog({
    // grab the eventId generated by the Sentry SDK
    eventId: '<%= @sentry_event_id -%>'
  });
  </script>
<% end %>

<% if debug_visible? %>
  <h3>Staff Info</h3>

  <h4>Backtrace</h4>
  <pre><%= details[:name] %> (<%= details[:message] %>):
  <%= details[:source] -%>
  <%= details[:backtrace] -%>
  </pre>

  <h4>Rack Enviroment</h4>
  <table class="table table-striped table-bordered">
    <% details[:env].each_pair do |k, v| %>
      <tr>
        <th style="width: 300px"><%= k %></th>
        <td>
          <div style="word-break: break-all; overflow: auto; max-height: 100px"><%= v %></div>
        </td>
      </tr>
    <% end %>
  </table>
<% end %>
