!!!
%html
  %head
    %meta(http-equiv="X-UA-Compatible" content="IE=edge")
    %meta(name="viewport" content="width=device-width, initial-scale=1")


    %title Monsoon Converged Cloud Dashboard
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    -# = content_for :javascripts do
    :javascript
      //window.History = { options: { html4Mode: true} };
      window.pluginName = "#{plugin_name}"
      window.scopedDomainId = "#{@scoped_domain_id}"
      window.scopedDomainFid = "#{@scoped_domain_fid}"
      window.scopedProjectId = "#{@scoped_project_id}"
      window.scopedProjectFid = "#{@scoped_project_fid}"
       
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    
    / Load plugin js (plugin_name/plugin.js)
    - plugin = Core::PluginsManager.plugin(plugin_name)
    - if plugin and plugin.has_plugin_js?
      = javascript_include_tag "#{plugin.name}/#{plugin.class::PLUGIN_JS_FILE_NAME}"
    
    = favicon_png
    = favicon_ico
    = apple_touch_icon

    = csrf_meta_tags

  %body{class: "#{body_class}"}

    = render "nav"
    = render "breadcrumb"
    = render "main_toolbar"

    = yield :page_lead

    .container
      .content{class: "#{plugin_name if plugin_name}"}
        = render "application/flashes"
        = yield

    %footer.footer
      .container
        = image_tag "monsoon_logo.png", class: "pull-right"

        .row
          .col-sm-3
            - if Rails.env.development?
              = render partial: 'layouts/dev_tools'
          .col-sm-3
            - if Rails.env.development? and current_user
              = raw "Token expires at: #{current_user.token_expires_at.to_time.localtime.strftime('%d.%m.%Y %H:%M:%S')} (ca. <span id='token-counter'>#{((current_user.token_expires_at.to_time-Time.now)/60).round}</span> minutes)"
              :javascript
                setInterval(function(){ var counter = parseInt($('#token-counter').text()); $('#token-counter').text(counter-1) }, 60000);
                
              
          .col-sm-3

    = yield :templates
    = yield :javascripts

    #modal-holder
