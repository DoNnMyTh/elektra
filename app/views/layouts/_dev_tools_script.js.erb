$(document).ready(function () {
  setNewsBadge();
});

function setNewsBadge() {
  news = []
  $(".new").each(function() {
    date = $(this).attr("data-date");
    oneWeekAgo = new Date();
    oneWeekAgo.setDate(oneWeekAgo.getDate() - 7);
    if( (new Date(date) > oneWeekAgo)){
      news.push(date)
    }
  });

  $('#news_badge').append(news.length)
}